<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="org.gmcalc3"
	android:versionCode="1"
	android:versionName="1.0" >

	<uses-sdk
		android:minSdkVersion="15"
		android:targetSdkVersion="19" />

	<application
		android:allowBackup="true"
		android:icon="@drawable/ic_launcher"
		android:label="@string/app_name"
		android:theme="@style/AppTheme" >
		
		<activity
			android:name="org.gmcalc3.TableActivity"
			android:label="@string/label_table" 
			android:launchMode="singleTask" >
			
			<intent-filter android:label="@string/app_name" >
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
			
			<intent-filter>
				<action android:name="org.gmcalc3.TableActivity" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		
		<activity
			android:name="org.gmcalc3.DeviceWorldsActivity"
			android:label="@string/label_device_worlds" 
			android:launchMode="singleTop" >
			
			<intent-filter>
				<action android:name="org.gmcalc3.DeviceWorldsActivity" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		
		<activity
			android:name="org.gmcalc3.SettingsActivity"
			android:label="@string/label_settings" 
			android:launchMode="singleTop" >
			
			<intent-filter>
				<action android:name="org.gmcalc3.SettingsActivity" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		
		<activity
			android:name="org.gmcalc3.CharacterDetailActivity"
			android:label="@string/label_character_detail"  >
			
			<intent-filter>
				<action android:name="org.gmcalc3.CharacterDetailActivity" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		
	</application>

</manifest>
